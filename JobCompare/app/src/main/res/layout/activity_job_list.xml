<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JobList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Tiltle"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#673AB7"
            android:text="比较工作offer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30sp">

            <TextView
                android:id="@+id/headingTitle"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="70sp"
                android:text="职位"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/headingCompany"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="公司"
                android:textSize="22sp" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewList"
        android:layout_width="419dp"
        android:layout_height="545dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/ButtonList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="96dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="635dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/compare"
                android:layout_width="150dp"
                android:layout_height="64dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:onClick="onCompareClick"
                android:text="比较" />

            <Button
                android:id="@+id/return1"
                android:layout_width="150dp"
                android:layout_height="64dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="20dp"
                android:onClick="onReturnClick"
                android:text="主菜单" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>