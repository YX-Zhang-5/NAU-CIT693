<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareJob">

    <LinearLayout
        android:id="@+id/ButtonList"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Tiltle"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#673AB7"
            android:text="Offer 大比拼"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="110dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="工作一"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="工作二"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100px">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="  公司" />

                <TextView
                    android:id="@+id/Company1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Company2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100px">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="  职位" />

                <TextView
                    android:id="@+id/Title1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Title2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100px">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="  地点" />

                <TextView
                    android:id="@+id/Location1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Location2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100px">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="  生活成本" />

                <TextView
                    android:id="@+id/Living1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Living2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100px">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="  年薪" />

                <TextView
                    android:id="@+id/Salary1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Salary2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100px">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="  年终奖" />

                <TextView
                    android:id="@+id/Bonus1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Bonus2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100px">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="  健身房补贴" />

                <TextView
                    android:id="@+id/Gym1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Gym2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100px">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="  年假" />

                <TextView
                    android:id="@+id/Leave1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Leave2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100px">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="  养老金基数%" />

                <TextView
                    android:id="@+id/Match1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Match2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100px">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="其他补贴" />

                <TextView
                    android:id="@+id/Pet1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Pet2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/compare"
                android:layout_width="150dp"
                android:layout_height="64dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:onClick="onMainClick"
                android:text="主菜单" />

            <Button
                android:id="@+id/return1"
                android:layout_width="150dp"
                android:layout_height="64dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="20dp"
                android:onClick="onReturnClick"
                android:text="返回" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>