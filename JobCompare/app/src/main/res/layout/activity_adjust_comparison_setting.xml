<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdjustComparisonSetting">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Tiltle"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#673AB7"
            android:text="修改比较因素参数设置"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelWsalary"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:paddingStart="20sp"
            android:text="年薪"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Wsalary"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:inputType="number"
            android:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelWbonus"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:paddingStart="20sp"
            android:text="年终奖"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/bonusWeight"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:inputType="number"
            android:text="1" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelWGymMember"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:paddingStart="20sp"
                android:text="健身房补贴"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/WGymMember"
                android:layout_width="200dp"
                android:layout_height="64dp"
                android:inputType="number"
                android:text="1" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelWleavetime"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:paddingStart="20sp"
            android:text="年假（天）"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Wleavetime"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:inputType="number"
            android:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelW401kMatch"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:paddingStart="20sp"
            android:text="养老金基数（%）"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/W401kMatch"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:inputType="number"
            android:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelWPetInsurance"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:paddingStart="20sp"
            android:text="其他补贴"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/WPetInsurance"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:inputType="number"
            android:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="64dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="70dp"
            android:onClick="handleClick"
            android:text="保存" />

        <Button
            android:id="@+id/Return"
            android:layout_width="150dp"
            android:layout_height="64dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="70dp"
            android:inputType="text"
            android:onClick="onReturnClick"
            android:text="返回" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>