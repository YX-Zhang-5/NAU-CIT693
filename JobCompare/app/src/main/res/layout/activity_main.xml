<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Tiltle"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:background="#673AB7"
                android:text="offer大比拼"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="12dp"
                android:onClick="onMine"
                android:src="@drawable/icon_mine"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/MainMenu"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:text="主菜单"
            android:textAlignment="center"
            android:textSize="34sp" />

        <Button
            android:id="@+id/EnterEditJD"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="onDetailClick"
            android:text="添加/修改 工作细节" />

        <Button
            android:id="@+id/EnterJobOffer"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="10dp"
            android:onClick="onOfferClick"
            android:text="添加工作Offer" />

        <Button
            android:id="@+id/AdjCompSettings"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="10dp"
            android:onClick="onAdjustClick"
            android:text="修改比较设置" />

        <Button
            android:id="@+id/CompareJobOffer"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="10dp"
            android:onClick="onCompareClick"
            android:text="我的工作offer" />

        <Button
            android:id="@+id/CompareSharedJobOffer"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="10dp"
            android:onClick="onCompareSharedClick"
            android:text="分享的工作offer" />

        <Button
            android:id="@+id/ManageAccount"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="10dp"
            android:onClick="onManageAccount"
            android:text="管理账户"
            android:visibility="gone"/>

        <Button
            android:id="@+id/Statistics"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="10dp"
            android:onClick="onStatistics"
            android:text="统计数据"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/ContactUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:onClick="onContactUs"
            android:textColor="#6750A4"
            android:text="联系我们" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>